<h1>List of all <%= @type %></h1>
<hr>

<table border="1">
  <tbody>
  <tr>
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Name
    </th>
    <th>
      Dob
    </th>
    <th>
    </th>
  </tr>
    <% @people.map{|actor|%>
      <tr>
        <td><%= actor.id %></td>
        <td><img src=<%= actor.image %> /></td>
        <td><%= actor.name %></td>
        <td><%= actor.dob%></td>
        <td><a href="/<%= @type %>/<%= actor.id %>">Show details</a><td>
      </tr>
    <% } %>
  </tbody>
</table>
<%= @actors %>
