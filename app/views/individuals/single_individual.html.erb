<h1><%= @type %> #<%= @id %> details</h1>
<a href="/actors">Go back</a>
<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor_info.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor_info.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor_info.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @actor_info.image %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor_info.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor_info.updated_at %>
  </dd>
</dl>
