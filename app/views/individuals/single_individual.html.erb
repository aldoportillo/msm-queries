<h1><%= @type %> #<%= @id %> details</h1>
<a href="/<%= @type.downcase %>s">Go back</a>
<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @personal_info.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @personal_info.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @personal_info.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @personal_info.image %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @personal_info.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @personal_info.updated_at %>
  </dd>
</dl>
<hr>

<% if @type == "Director" %>

<h2>Filmography</h2>

<table border="1">
  <tbody>
    <tr>
      <th>
        ID
      </th>

      <th>
        Image
      </th>

      <th>
        Title
      </th>

      <th>
        Year
      </th>

      <th>
        Director
      </th>

      <th>
      </th>
    </tr>
    <% @filmography.each{ |film| %>
      <tr>
      <td><%= film.id%> </td>

      <td><img src="<%= film.image%>" style="width:250px;"></td>

      <td>T<%= film.title%></td>

      <td><%= film.year%></td>

      <td><%= @personal_info.name%></td>

      <td><a href="/movies/<%= film.id%>">Show details</a></td>
    </tr>
    <% } %>
    
  </tbody>
</table>

<% end %>
